<div class="row">
    <div class="columns text-center large-12">
        <h2>Regístrate</h2>
    </div>
</div>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true}) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
        <div class="row">
            <div class="columns text-right large-4 icono_nombre">
                <i class="fa fa-user fa-2x"></i>
            </div>
            <div class="columns large-4">
                <%= f.text_field :name, autofocus: true, placeholder: "Digite su nombre" %>
            </div>
        </div>
    </div>

    <div class="field">
        <div class="row">
            <div class="columns text-right large-4 icono_email">
                <i class="fa fa-envelope fa-2x"></i>
            </div>
            <div class="columns large-4">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Digite su email" %>
            </div>
        </div>
    </div>

    <div class="field">
        <div class="row">
            <div class="columns text-right large-4 icono_contraseña">
                <i class="fa fa-lock fa-2x"></i>
            </div>
            <div class="columns large-4">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Digite su contraseña (minimo 6 caracteres)"  %>
            </div>
        </div>
    </div>

    <div class="field">
        <div class="row">
            <div class="columns text-right large-4 icono_contraseña">
                <i class="fa fa-lock fa-2x"></i>
            </div>
            <div class="columns large-4">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirme su contraseña (minimo 6 caracteres)" %>
            </div>
        </div>
    </div>

    <div class="field">
        <div class="row">
            <div class="columns text-center large-12">
                <%= f.file_field :avatar %>  
            </div>
        </div>
    </div>


    <div class="actions">
        <div class="row">
            <div class="columns text-center large-12">
                <%= f.submit "Sign up", :class => "hollow button" %>  
            </div>
        </div>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
