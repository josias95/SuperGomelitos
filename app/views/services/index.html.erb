<section class="categoria_servicios">
    <h3 class="text-center" style="font-family: 'Coiny', cursive;">Seleccione una categoría</h3>
    <ul class="tabs text-center" data-tabs id="servicios-tabs">
        <li class="tabs-title is-active">
            <a href="#panelBebes"  aria-selected="true">Bebés</a>
        </li>
        <li class="tabs-title">
            <a  data-tabs-target="panelNiños" href="#panelNiños">Niños</a>
        </li>
        <li class="tabs-title">
            <a href="#panelAdultos">Adultos</a>
        </li>
    </ul>
    <div class="tabs-content" data-tabs-content="servicios-tabs">
        <div class="tabs-panel is-active" id="panelBebes">
            <% if @services.empty? %>
                <h3>No hay servicios creados</h3>
            <% else %>
                <div class="row align-middle">
                    <div class="columns large-3 text-right">
                        <%= image_tag("bebeanimada.jpg", :alt => "bebes_img", :class => "bebe_animada") %>
                    </div>
                    <div class="columns large-6">
                        <h5 class="text-center">Esta categoría es para bebés entre 0 y 5 añitos</h5>
                    </div>
                    <div class="columns large-3">
                        <%= image_tag("bebeanimado.jpg", :alt => "bebes_img", :class => "bebe_animado") %>
                    </div>
                </div>
                <div class="row">
                    <% @services.each do |service| %>
                        <% if service.categoria=="Bebes"%>
                            <div class="columns large-12 text-center servicios_bebe">
                                <div class="row">
                                    <div class="columns large-12 servicio_nombre">
                                        <%= service.nombre %>
                                    </div>
                                    <div class="columns large-12">
                                        <div class="row">
                                            <div class="columns large-3">
                                                <%= image_tag("bebes.jpg", :alt => "bebes_img", :class => "bebes") %>
                                            </div>
                                            <div class="columns large-3">
                                                <%= image_tag("corte2.jpg", :alt => "bebes_img", :class => "bebes") %>
                                            </div>
                                            <div class="columns large-3">
                                                <%= image_tag("corte3.jpg", :alt => "bebes_img", :class => "bebes") %>
                                            </div>
                                            <div class="columns large-3">
                                                <%= image_tag("corte4.jpg", :alt => "bebes_img", :class => "bebes") %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="columns large-12 servicio_descripcion">
                                        <%= service.descripcion %>
                                    </div>
                                    <div class="columns large-6 text-right" style="padding-top: 15px; color: green;">
                                        <i class="fa fa-credit-card fa-2x"></i>
                                    </div>
                                    <div class="columns large-6 text-left servicio_valor">
                                        <%= service.valor %> 
                                    </div>
                                    <% if user_signed_in? %>
                                        <div class="columns large-6">
                                            <%= link_to 'Editar', edit_service_path(service), :class => "hollow button success"%>
                                        </div>
                                        <div class="columns large-6">
                                            <%= link_to 'Eliminar', service, method: :delete, data: { confirm: 'Are you sure?' }, :class => "hollow button alert" %>
                                        </div>
                                    <% end -%>
                                </div>
                            </div>
                        <% end -%>
                    <% end %>
                </div>
            <% end %>
        </div>
        <div class="tabs-panel" id="panelNiños">
            <% if @services.empty? %>
                <h3>No hay servicios creados</h3>
            <% else %>
                <div class="row align-middle">
                    <div class="columns large-3 text-right">
                        <%= image_tag("niñaanimada.jpg", :alt => "niños_img", :class => "niña_animada") %>
                    </div>
