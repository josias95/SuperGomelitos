                    </div>
                    <div class="columns large-3">
                        <%= image_tag("adultoanimado.jpg", :alt => "bebes_img", :class => "adulto_animado") %>
                    </div>
                </div>
                <div class="row">
                    <% @services.each do |service| %>
                        <% if service.categoria=="Adultos"%>
                            <div class="columns large-12 text-center servicios_bebe">
                                <div class="row">
                                    <div class="columns large-12 servicio_nombre">
                                        <%= service.nombre %>
                                    </div>
                                    <div class="columns large-12">
                                        <div class="row">
                                            <div class="columns large-3">
                                                <%= image_tag("adultos.jpg", :alt => "bebes_img", :class => "adultos") %>
                                            </div>
                                            <div class="columns large-3">
                                                <%= image_tag("trenza2.jpg", :alt => "bebes_img", :class => "adultos") %>
                                            </div>
                                            <div class="columns large-3">
                                                <%= image_tag("trenza3.jpg", :alt => "bebes_img", :class => "adultos") %>
