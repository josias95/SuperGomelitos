                                        <%= service.nombre %>
                                    </div>
                                    <div class="columns large-12">
                                        <div class="row">
                                            <div class="columns large-3">
                                                <%= image_tag("niños.jpg", :alt => "bebes_img", :class => "niños") %>
                                            </div>
                                            <div class="columns large-3">
                                                <%= image_tag("peinado2.jpg", :alt => "bebes_img", :class => "niños") %>
                                            </div>
                                            <div class="columns large-3">
                                                <%= image_tag("peinado3.jpg", :alt => "bebes_img", :class => "niños") %>
                                            </div>
                                            <div class="columns large-3">
                                                <%= image_tag("peinado4.jpg", :alt => "bebes_img", :class => "niños") %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="columns large-12 servicio_descripcion">
