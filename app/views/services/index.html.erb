<p id="notice"><%= notice %></p>

<h1>Services</h1>

<% if @services.empty? %>
  <h3>No hay servicios creados</h3>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Valor</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.nombre %></td>
          <td><%= service.descripcion %></td>
          <td><%= service.valor %></td>
          <td><%= link_to 'Show', service %></td>
          <td><%= link_to 'Edit', edit_service_path(service) %></td>
          <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<br>

<%= link_to 'New Service', new_service_path %>
